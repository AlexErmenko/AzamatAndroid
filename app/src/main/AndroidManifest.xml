		>
		
		<activity
			android:name = ".ui.onboarding.BenefitActivity"
			android:label = "@string/title_activity_benefit"
			
			>
			<intent-filter>
				<action android:name = "android.intent.action.MAIN" />
				
				<category android:name = "android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		
		<activity
			android:name = ".ui.main.MainActivity"
			android:label = "@string/title_activity_slider"
			android:theme = "@style/AppTheme.NoActionBar"
			>
		</activity>
		
		<receiver
			android:name = ".services.NetworkReceiver"
			android:enabled = "true"
			android:exported = "true"
			>
		</receiver>
		
		<activity
			android:name = ".ui.settings.SettingsActivity"
			>
		</activity>
		
		
		<activity android:name = ".ui.preloader.PreloaderActivity">
			
